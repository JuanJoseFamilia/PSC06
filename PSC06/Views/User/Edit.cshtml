@model PSC06.Models.ViewModels.EditUserViewModels
@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}


    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100" style="background: white">
        <div class="card shadow-lg p-5" style="width: 100%; max-width: 700px;">
            <h2 class="text-center mb-5" style="font-family: 'Poppins', sans-serif; font-weight: 700; font-size: 2.5rem;">Actualizar Usuario</h2>


            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form" }))
            {
                <div class="d-flex justify-content-start mb-4">
                    <button type="button" class="btn btn-light btn-lg" onclick="window.location.href='@Url.Content("~/User/Query")'"><img src="~/Content/img/back.png" alt="atras" width="40"></button>

                </div>

                <div class="table-responsive mb-4">
                    <table class="table table-bordered table-striped table-hover align-middle">
                        <tbody>
                            <tr> @Html.HiddenFor(d => d.Id)</tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.Nombre, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Nombre", new { @class = "text-danger" })</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.Usuario, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.Usuario, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Usuario", new { @class = "text-danger" })</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.Email, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.Email, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Email", new { @class = "text-danger" })</td>

                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.Password, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.Password, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Password", new { @class = "text-danger" })</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.ConfirmaPassword, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.ConfirmaPassword, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Confirmapassword", new { @class = "text-danger" })</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(d => d.Edad, new { @class = "form-label fw-bold" })</td>
                                <td>@Html.TextBoxFor(d => d.Edad, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessage("Edad", new { @class = "text-danger" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-4">

                    <input type="submit" class="btn btn-success btn-lg" value="Actualizar" />
                </div>
            }
        </div>
    </div>


